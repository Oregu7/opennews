<% layout('layout/main') -%>
<%- stylesheet('/stylesheets/blog-home.css') %>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h1 class="page-header">
            Добавить новость
        </h1>
        <% if(success){ %>
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Здорово!</strong> Ваша новость успешно опубликована.
        </div>
        <% } %>
        <form class="form-horizontal" method="post">
            <div class="form-group">
                <label for="inputLabel1" class="col-sm-2 control-label">Тема</label>
                <div class="col-sm-10">
                    <input 
                        type="text"
                        name="title" 
                        class="form-control" 
                        id="inputLabel1" 
                        placeholder="Тема" />
                </div>
            </div>

            <div class="form-group">
                <label for="inputLabel2" class="col-sm-2 control-label">Автор</label>
                <div class="col-sm-10">
                    <input 
                        type="text"
                        name="author"
                        value="Аноним" 
                        class="form-control" 
                        id="inputLabel2" 
                        placeholder="Автор" />
                </div>
            </div>

            <div class="form-group">
                <label for="inputLabel3" class="col-sm-2 control-label">Изображение</label>
                <div class="col-sm-10">
                    <input 
                        type="text"
                        name = "image" 
                        class="form-control" 
                        id="inputLabel3" placeholder="Ссылка на картинку" />
                </div>
            </div>

            <div class="form-group">
                <label for="inputLabel4" class="col-sm-2 control-label">Текст</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="inputLabel4" name = "text" rows="11"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Опубликовать</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
